<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")

</head>
<body class="nav-md">
    <div class="container body">
        <div class="main_container" style="direction:rtl">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="index.html" class="site_title"><i class="fa fa-paw"></i> <span>جمعية المودة</span></a>
                    </div>

                    <div class="clearfix"></div>

                    @{
                        Html.RenderAction("profileStudent", "Students");
                    }

                    <br />

                    <!-- sidebar menu -->
                    @{
                        Html.RenderAction("Sidebar", "Home");
                    }
                    <!-- /sidebar menu -->

                </div>
            </div>

            <!-- top navigation -->
            @{
                Html.RenderAction("TopNavigation", "Home");
            }
            <!-- /top navigation -->


            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/lib")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/3.3.4/jquery.inputmask.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
